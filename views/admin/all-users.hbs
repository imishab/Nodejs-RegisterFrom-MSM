<div class="page-wrapper">

    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Registered Students</h4>

                <div class="ms-auto text-end">

                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="zero_config" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th>Name</th>
                                <th>Father Name</th>
                                <th>School</th>
                                <th>Age</th>
                                <th>Zone</th>
                                <th>Vehicle</th>
                                <th>Phone Number</th>
                                <th>Whatsapp Number</th>
                                <th>Manage</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each users}}
                            <tr>
                                <td>{{incremented @index}}</td>
                                <td>{{this.Name}}</td>
                                <td>{{this.FatherName}}</td>
                                <td>{{this.School}}</td>
                                <td>{{this.Age}}</td>
                                <td>{{this.Zone}}</td>
                                <td>{{this.Vehicle}}</td>
                                <td>{{this.Phone}}</td>
                                <td>{{this.whatsapp}}</td>
                                <td><a href="/admin/remove-user/{{this._id}}" class="btn btn-danger"
                                        onclick="return confirm('Are You Sure to Delete {{this.Name}} ?')">Remove</a>
                                </td>

                            </tr>
                            {{/each}}



                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>